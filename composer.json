{
  "name": "diamond-dove/simple-json",
  "description": "Read and write big JSON files",
  "keywords": [
    "diamond-dove",
    "simple-json"
  ],
  "homepage": "https://github.com/diamond-dove/simple-json",
  "license": "MIT",
  "authors": [
    {
      "name": "Fermin Perdomo",
      "email": "masterfermin02@gmail.com",
      "homepage": "https://fperdomo.dev/",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.1",
    "illuminate/support": "^6.3|^7.0|^8.0",
    "jajo/jsondb": "^3.0",
    "spatie/temporary-directory": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "spatie/phpunit-snapshot-assertions": "^4.2"
  },
  "autoload": {
    "psr-4": {
      "DiamondDove\\SimpleJson\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DiamondDove\\SimpleJson\\Tests\\": "tests"
    }
  },
  "scripts": {
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "sort-packages": true
  }
}
